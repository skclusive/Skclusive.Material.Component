@namespace Skclusive.Material.Core
@inherits ResponsiveComponent

<style
    data-name="@Prefix">

    @media (min-width:0px) and (max-width:599.95px) {
        .@Prefix-ExtraSmallOnly {
            @ExtraSmallOnly
        }
    }

    @media (min-width:0px) {
        .@Prefix-ExtraSmallUp {
            @ExtraSmallUp
        }
    }

    @media (max-width:599.95px) {
        .@Prefix-ExtraSmallDown {
            @ExtraSmallDown
        }
    }

    @media (min-width:600px) and (max-width:959.95px) {
        .@Prefix-SmallOnly {
            @SmallOnly
        }
    }

    @media (min-width:600px) {
        .@Prefix-SmallUp {
            @SmallUp
        }
    }

    @media (max-width:959.95px) {
        .@Prefix-SmallDown {
            @SmallDown
        }
    }

    @media (min-width:960px) and (max-width:1279.95px) {
        .@Prefix-MediumOnly {
            @MediumOnly
        }
    }

    @media (min-width:960px) {
        .@Prefix-MediumUp {
            @MediumUp
        }
    }

    @media (max-width:1279.95px) {
        .@Prefix-MediumDown {
            @MediumDown
        }
    }

    @media (min-width:1280px) and (max-width:1919.95px) {
        .@Prefix-LargeOnly {
            @LargeOnly
        }
    }

    @media (min-width:1280px) {
        .@Prefix-LargeUp {
            @LargeUp
        }
    }

    @media (max-width:1919.95px) {
        .@Prefix-LargeDown {
            @LargeDown
        }
    }

    @media (min-width:1920px) {
        .@Prefix-ExtraLargeOnly {
            @ExtraLargeOnly
        }
    }

    @media (min-width:1920px) {
        .@Prefix-ExtraLargeUp {
            @ExtraLargeUp
        }
    }

    @media (min-width:0px) {
        .@Prefix-ExtraLargeDown {
            @ExtraLargeDown
        }
    }

</style>

@ChildContent?.Invoke(Context)